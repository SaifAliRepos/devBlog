<div>
  <%if @post.user_id == current_user.id || current_user.id == 1 || current_user.id == 2 %>
    <%= link_to "Edit this post", edit_post_path(@post), :class => "btn btn-outline-primary btn-sm px-4 me-md-2 fw-bold mt-n5"  %>
    <br/>
    <%= button_to "Destroy this post", @post, method: :delete, :class => "btn btn-danger btn-sm px-4 me-md-2 fw-bold"  %>
  <%end%>
</div>
