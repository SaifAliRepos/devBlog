<p style="color: green"><%= notice %></p>

<h1>Suggestions</h1>

<div id="suggestions">
  <% @suggestions.each do |suggestion| %>
    <%= render suggestion %>
    <p>
      <%= link_to "Show this suggestion", @suggestion %>
    </p>
  <% end %>
</div>

<%= link_to "New suggestion", new_post_suggestion_path %>
