<div id="<%= dom_id post %>">
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%if post.status == 'pending' %>
    <div class="container-fluid">
      <div class="row g-0 rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
        <div class="col p-5 d-flex flex-column position-static">
          <p class="d-inline-block mb-2 ml-1 text-info">Exclusive</p>
          <h3 class="mb-0 sty display-4"><%= post.name %></h3>
          <div class="mb-1 text-muted"><%= post.created_at%></div>
          <p class="card-text mb-auto"><%= post.title %></p>
          <h4 class="mt-2">Status</h4>
          <p class="card-text mb-2 mt-0"><%= post.status %></p>
          <%= link_to 'Report', report_path, method: :post %>
          <%= link_to "Show this post", post %>
          <br/>
          <%= post.likes.count.to_s %> <%= (post.likes.count) <= 1 ? 'Like' : 'Likes'%>
          <%= post.comments.count.to_s %> <%= (post.comments.count) <= 1 ? 'Comment' : 'Comments'%>
        </div>
        <div class="col-auto d-none d-lg-block p-4">
          <img class="rounded-lg-3" src="https://i.pinimg.com/originals/5f/8e/90/5f8e90b8b9c27c0e8b7aef48c432c5ce.jpg" alt="" width="520">
        </div>
      </div>
    </div>
  </div>
<% end%>
