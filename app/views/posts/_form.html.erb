<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 p-5">
      <%= form_with(model: post) do |form| %>
        <% if post.errors.any? %>
          <div style="color: red">
            <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
            <ul>
              <% post.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="mb-4">
          <%= form.label :'Post Name', style: "display: block" %>
          <%= form.text_field :name, required: true %>
        </div>

        <div>
          <%= form.label :'Write Something ', style: "display: block" %>
          <%= form.text_area :title, required: true %>
        </div>
        <div>
          <%= form.hidden_field :status, value: 'pending' %>
        </div>
        <br/>
        <div>
          <%= form.label :image, style: "display: block" %>
          <%= form.file_field :image %>
        </div>
        <br/>
        <div>
          <%= form.submit%>
        </div>
      <% end %>
    </div>
    <div class="col-md-6">
      <img class="rounded-lg-3" src="https://i.pinimg.com/originals/d3/46/4a/d3464a4351fdf340ccb6bb37c281381a.gif" alt="" width="520">
    </div>
  </div>
</div>
